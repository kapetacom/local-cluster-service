{
  "name": "@kapeta/local-cluster-service",
  "version": "0.6.1",
  "description": "Manages configuration, ports and service discovery for locally running Kapeta systems",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kapetacom/local-cluster-service.git"
  },
  "keywords": [
    "kapeta"
  ],
  "author": "Henrik Hofmeister <hh@kapeta.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kapetacom/local-cluster-service/issues"
  },
  "scripts": {
    "start": "ts-node --transpile-only ./start.ts",
    "dev": "nodemon -e js,ts,json npm run start",
    "test": "echo its fine"
  },
  "homepage": "https://github.com/kapetacom/local-cluster-service#readme",
  "dependencies": {
    "@kapeta/codegen": "<2",
    "@kapeta/local-cluster-config": ">= 0.2.3 <2",
    "@kapeta/nodejs-api-client": "<2",
    "@kapeta/nodejs-registry-utils": "<2",
    "@kapeta/nodejs-utils": "<2",
    "@kapeta/schemas": "^0.0.58",
    "@kapeta/sdk-config": "<2",
    "express": "4.17.1",
    "express-promise-router": "^4.1.1",
    "fs-extra": "^11.1.0",
    "glob": "7.1.6",
    "lodash": "^4.17.15",
    "md5": "2.2.1",
    "mkdirp": "0.5.1",
    "node-cache": "^5.1.2",
    "node-docker-api": "1.1.22",
    "node-uuid": "^1.4.8",
    "request": "2.88.2",
    "request-promise": "4.2.6",
    "socket.io": "^4.5.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "yaml": "^1.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash": "^4.14.195",
    "@types/md5": "^2.3.2",
    "@types/mkdirp": "^2.0.0",
    "@types/node-uuid": "^0.0.29",
    "@types/request": "^2.48.8",
    "nodemon": "^2.0.2"
  },
  "prettier": {
    "tabWidth": 4,
    "singleQuote": true
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
